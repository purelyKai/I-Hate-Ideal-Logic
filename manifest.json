{
  "manifest_version": 3,
  "name": "Ideal Logic Reimbursement Request Form Filler",
  "version": "1.0",
  "description": "Automatically selects options and fills the reimbursement request form on Ideal Logic at Oregon State Univeristy.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["*://apps.ideal-logic.com/osusli"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://apps.ideal-logic.com/osusli"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
